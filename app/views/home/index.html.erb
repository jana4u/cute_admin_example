<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US" lang="en-US">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>CuteAdmin <%= I18n.t 'txt.example' %></title>
</head>
<body>
<h1>CuteAdmin <%= I18n.t 'txt.example' %></h1>

<% form_tag '', {:method => "get"} do %>
  <div><%= I18n.t 'txt.choose_language' %>: <%= select_tag("locale", options_for_select(LOCALES_AVAILABLE, I18n.locale), { :index => nil, :onchange => 'this.form.submit()'}) %></div>
<% end %>

<ul>
  <li><%= link_to(Company.human_name(:count => 2), companies_path) %></li>
  <li><%= link_to(Employee.human_name(:count => 2), employees_path) %></li>
  <li><%= link_to(Email.human_name(:count => 2), emails_path) %></li>
  <li><%= link_to(PhoneNumber.human_name(:count => 2), phone_numbers_path) %></li>
</ul>

<p><%= I18n.t 'txt.more' %>: <%= link_to("http://github.com/jana4u/cute_admin", "http://github.com/jana4u/cute_admin") %><br />
<%= I18n.t 'txt.get_example' %>: <%= link_to("http://github.com/jana4u/cute_admin_example", "http://github.com/jana4u/cute_admin_example") %></p>

<p>Copyright &copy; 2008 <%= mail_to("jana4u@seznam.cz", "Jana4U") %>, released under the MIT license</p>

</body>
</html>
