<div class="admin-container-detail">
<h1><%= Developer.human_name %></h1>

<div class="admin-control">
<div class="item-edit"><%= link_to translate(:edit, :default => 'Edit', :scope => [:railties, :scaffold]), edit_developer_path(@developer) %></div>
<div class="back"><%= link_to translate(:back, :default => 'Back', :scope => [:railties, :scaffold]), developers_path %></div>
</div>

<div class="admin-main">
<table class="admin-table-show">
  <tr>
    <td class="label-cell"><%= Developer.human_attribute_name("first_name") %></td>
    <td class="content-cell"><%= h(@developer.first_name) %></td>
  </tr>
  <tr>
    <td class="label-cell"><%= Developer.human_attribute_name("last_name") %></td>
    <td class="content-cell"><%= h(@developer.last_name) %></td>
  </tr>
  <tr>
    <td class="label-cell"><%= Developer.human_attribute_name("born_on") %></td>
    <td class="content-cell"><%= @developer.born_on %></td>
  </tr>
  <tr>
    <td class="label-cell"><%= Developer.human_attribute_name("years_employed") %></td>
    <td class="content-cell"><%= number_with_delimiter(@developer.years_employed) %></td>
  </tr>
  <tr>
    <td class="label-cell"><%= Developer.human_attribute_name("manager") %></td>
    <td class="content-cell"><%= nice_boolean(@developer.manager) %></td>
  </tr>
  <tr>
    <td class="label-cell"><%= Developer.human_attribute_name("note") %></td>
    <td class="content-cell"><%= h(@developer.note) %></td>
  </tr>
  <tr>
    <td class="label-cell"><%= Company.human_name %></td>
    <td class="content-cell"><%= h(@developer.company.display_name) if @developer.company %></td>
  </tr>
  <tr>
    <td class="label-cell"><%= Developer.human_attribute_name("created_at") %></td>
    <td class="content-cell"><%= @developer.created_at %></td>
  </tr>
  <tr>
    <td class="label-cell"><%= Developer.human_attribute_name("updated_at") %></td>
    <td class="content-cell"><%= @developer.updated_at %></td>
  </tr>
</table>
</div>

</div>
